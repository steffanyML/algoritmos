// vectorfibonacci.cpp : Defines the entry point for the console application.
//


#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define MAX 100

using namespace std;

void cargar(double v[], int n);
void mostrar(double v[], int n);

void main()
{
	double v[MAX];
	int n;
	do
	{
	cout<<"ingrese el tamaÃ±o del vector";
	cin>>n;
	}while (n<=0||n>MAX);
	cargar(v,n);
	mostrar(v,n);

	getch();

}

void cargar(double v[], int n)
{
	int a=0;
	int b=1;
	for(int i=0;i<n;i++)
	{
		if(i==0)
		{v[i]=a;}
		if (i==1)
		{v[i]=b;}
		if(i>1)
		{
			v[i]=a+b;
			a=b;
			b=v[i];
		}
		
	}
}
void mostrar(double v[], int n)
{
	for(int i=0;i<n;i++)
	{
		cout<<"v["<<i<<"]"<<v[i]<<endl;
	}
}
